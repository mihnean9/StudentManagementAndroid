<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idp.studentmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentManagement">
        <activity android:name=".student.ViewPersonalGradesActivity" />
        <activity android:name=".account.EditPersonalDataActivity" />
        <activity android:name=".account.AccountActivity" />
        <activity android:name=".account.PersonalActivity" />
        <activity android:name=".account.ViewPersonalDataActivity" />
        <activity android:name=".student.StudentAccountActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>